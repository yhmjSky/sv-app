{
	"name": "sv-app",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:cf": "npm run build && wrangler pages dev .svelte-kit/cloudflare --compatibility-date=2024-11-11",
		"build": "vite build",
		"preview": "npm run build && wrangler pages dev .svelte-kit/cloudflare",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply d1_2507 --local",
		"db:migrate:remote": "wrangler d1 migrations apply d1_2507 --remote",
		"db:studio": "drizzle-kit studio",
		"db:create-migration": "drizzle-kit generate",
		"deploy": "npm run build && wrangler pages deploy",
		"cf-typegen": "wrangler types src/worker-configuration.d.ts",
		"db:update-binding": "node scripts/update-binding.js",
		"db:auto-setup": "node scripts/auto-setup-database.js",
		"db:auto-setup-dry": "node scripts/auto-setup-database.js --dry-run",
		"validate:cicd": "node scripts/validate-cicd.js"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-cloudflare": "^7.1.2",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"wrangler": "^4.28.0"
	},
	"dependencies": {
		"@libsql/client": "^0.14.0",
		"drizzle-orm": "^0.40.0",
		"js-yaml": "^4.1.0"
	}
}
